<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkCyanBlue"
    tools:context=".MaterialFragment.StockDetail">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="331dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="205dp"
        android:layout_height="80dp"
        android:layout_marginTop="70dp"
        android:drawableTop="@drawable/ic_stock"
        android:text="@string/stock_detail"
        android:textAllCaps="true"
        android:textColor="@color/Cyan"
        app:backgroundTint="@color/Black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button7"
        android:layout_width="205dp"
        android:layout_height="80dp"
        android:layout_marginTop="70dp"
        android:background="#FFFFFF"
        android:text="@string/low_stock"
        android:textAllCaps="true"
        android:textColor="@color/Cyan"
        android:textColorLink="#FFFFFF"
        app:backgroundTint="@color/Black"
        app:iconTint="@color/Cyan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

